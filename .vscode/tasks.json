{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build System",
            "type": "shell",
            "command": "nix",
            "args": [
                "run",
                "github:serokell/deploy-rs",
                "--",
                "'.#${input:host}'"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "host",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "find ./hosts -maxdepth 3 -mindepth 3 -type d -exec basename {} \\; | sort -h | sed -e \"s/$HOSTNAME//1;1i$HOSTNAME\"",
                "cwd": "${workspaceFolder}",
                "description": "Target Host"
            }
        }
    ]
}